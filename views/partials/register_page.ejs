<br>
<div class="ui text container">
    <div class="ui attached icon info message">
    <i class="help circle icon"></i>
    <div class="content">
      <h1>Registeration</h1>
    </div>
  </div>
    <div class="ui segment">

    <form class="ui form">
        <h4 class="ui dividing header">User Information</h4>

        <div class="field">
            <label>Account</label>
            <div class="fields">
                <input type="text" placeholder="Account" ng-model="account">
            </div>
        </div>
        <div class="field">
            <label>Password</label>
            <div class="two fields">
                <div class="field">
                    <input type="password" placeholder="Password" ng-model="password">
                </div>
                <div class="field">
                    <input type="password"  placeholder="Confirm password" ng-model="password_confirm">
                </div>
            </div>
        </div>
        <div class="two fields">
            <div class="field">
                <label>Name</label>
                <input type="text"  placeholder="Your name" ng-model="name">
            </div>
<div class="field">
<label>Gender</label>
          <select class="ui fluid search dropdown" id="gender" ng-model="gender" ng-options="m.value for m in genderModel">
            <option value="">Gender</option>
          </select>
        </div>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="file" ng-model="uploadImage" ngf-select="test()" ngf-max-height="1000" ngf-max-size="1MB">
            <button ng-click="uploadImageFile(uploadImage)">Upload</button>
            <img ngf-src="uploadImage">
        </div>
        <h4 class="ui dividing header">Skill Information</h4>
        <div class="field">
            <label>Skills</label>
            <select class="ui fluid search dropdown" id="skills" multiple="" ng-model="skills" ng-options="s for s in skill_list" ng-change="selectSkill()">
            </select>
        </div>
        <h4 class="ui dividing header">Locations</h4>
        <div class="field">
            <label>Where to tool you or be tooled</label>
            <select class="ui fluid search dropdown" multiple="">
                <option value="">Add your own if not here</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <h4 class="ui dividing header">Contact</h4>
        <div class="field">
            <label>Email</label>
            <input type="text"  placeholder="Your mail" ng-model="mail">
        </div>
        <div class="two fields">
            <div class="field">
            	<label>Verification</label>
            	<input type="text"  placeholder="Your Verification String" ng-model="mail">
            </div>
            <div class="field">
            	<label>&nbsp</label>
            	<button ng-click="sendVerMail()">Send Verification String</button>
            </div>
        </div>
        <div class="ui segment">
            <div class="field">
                <div class="ui toggle checkbox">
                    <input type="checkbox" name="gift" tabindex="0" class="hidden">
                    <label>Receive notification letters</label>
                </div>
            </div>
        </div>
        <div class="ui button" ng-click="register()" tabindex="0">Submit Registration</div>
    </form>
    </div>
</div>