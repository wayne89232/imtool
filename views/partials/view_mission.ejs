<div class="ui modal small mission_clear">
<div class="header"><%= __('Mission Cleared - Rate your toolmans') %></div>
<div class="content" ng-repeat="tool in tools">
	<div class="ui form">
		<div >
			<div class="field">
				<div class="ui feed">
					<div class="event">
						<div class="label">
							<img src="{{tool.User.photo_url}}">
						</div>
						<div class="content">
							<a>{{tool.User.user_name}}</a>
						</div>
					</div>
				</div>
			</div>
			<div class="field">
				<label><%= __('Rating') %></label>
				<div id="{{$index}}" class="ui star rating" data-max-rating="5" data-rating="{{tool.rating}}" ng-click="testClick($index)"></div>
			</div>
			<div class="field">
				<label><%= __('Comment') %></label>
				<textarea ng-model="tool.feedback"></textarea>
			</div>
			<br>
		</div>
	</div>
	
</div>
<div class="actions">
	<div class="ui ok button" ng-click="saveComment()"><%= __('Save Comment') %></div>
	<div class="ui cancel button"><%= __('Cancel') %></div>
</div>
</div>
<div class="ui modal small add_tool">
<div class="header" ><%= __('Add a toolman') %></div>
<div class="content">
	<div class="ui form" >
		<div class="field">
			<select ng-model="new_tool" ng-options="m.user_name for m in toolmans" class="ui search dropdown">
				<option value=""><%= __('Toolman') %></option>
			</select>
		</div>
	</div>
</div>
<div class="actions">
	<div class="ui ok button" ng-click="add_toolman()"><%= __('Add') %></div>
	<div class="ui cancel button"><%= __('Cancel') %></div>
</div>
</div>
<div class="ui basic modal fire">
<i class="close icon"></i>
<div class="header">
	<%= __('Fire a toolman') %>
</div>
<div class="image content">
	<div class="image">
		<i class="archive icon"></i>
	</div>
	<div class="description">
		<p><%= __('Are you sure you want to fire this toolman?') %></p>
	</div>
</div>
<div class="actions">
	<div class="two fluid ui inverted buttons">
		<div class="ui cancel red basic inverted button">
			<i class="remove icon"></i>
			<%= __('No') %>
		</div>
		<div class="ui ok green basic inverted button" ng-click="go_fire()">
			<i class="checkmark icon"></i>
			<%= __('Yes') %>
		</div>
	</div>
</div>
</div>

