<div class="ui container">
	<div class="ui items ">
		<div class="item">
			<div class="image">
				<img src="{{mission_info.User.photo_url}}">
			</div>
			<div class="content">
				<h4 class="header" ng-bind="mission_info.title"></h4>
				<div class="meta">
					<div class="ui feed">
						<div class="event">
							<div class="label">
								<img src="{{mission_info.User.photo_url}}">
							</div>
							<div class="content">
								<div class="summary">
									<a class="user" ng-bind="mission_info.User.user_name" ng-click="user_info(mission_info.User.user_id)">
									</a> <%= __('hosted the mission on') %>
									<div class="date">
										2016/11/23
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="ui  segment">
					<div class="description" ng-bind="mission_info.content">
					</div>
				</div>
				<div class="extra bottom ">
					<!-- ng-repeat="tool in mission_info.Toolship" -->
					<div class="ui label" ng-repeat="skill in skills" ng-bind="skill.Skill.skill"></div>
				</div>
			</div>
		</div>
	</div>
	<div ng-hide="done()">
		<div class="ui divider" ng-show="identity()"></div>
		<div>
			<div class="ui one column grid" ng-show="identity()">
				<div class="row">
					<h2 class="ui header ">
					<img src="/assets/images/tool.png" class="ui circular image">
					<%= __('Tool'em all') %>
					</h2>
				</div>
				<div class="row">
					<div class="ui list selection" >
						<div class="item" ng-click="stop_recruit()" ng-show="status()">
							<i class="map marker icon"></i>
							<div class="content">
								<div class="header"><%= __('Stop recruiting') %></div>
								<div class="description"><%= __('The mission will then be started and disable toolmans to join.') %></div>
							</div>
						</div>
						<div class="item" ng-hide="delete" ng-click="fire()">
							<i class="map marker icon"></i>
							<div class="content">
								<div class="header"><%= __('Fire a toolman') %></div>
								<div class="description"><%= __('Fire him/her if you think he's shit.') %></div>
							</div>
						</div>
						<div class="item" ng-show="delete" ng-click="fire()">
							<i class="map marker icon"></i>
							<div class="content">
								<div class="header"><%= __('Stop firing') %></div>
								<div class="description"><%= __('Stop firing.') %></div>
							</div>
						</div>
						<div class="item" ng-click="end_mission()">
							<i class="map marker icon"></i>
							<div class="content">
								<div class="header" ><%= __('End mission') %></div>
								<div class="description"><%= __('Close the mission.') %></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="ui divider"></div>
	<div class="row ">
		<h2 class="ui header ">
		<img src="/assets/images/tool.png" class="ui circular image">
		Tools
		</h2>
	</div>
	<div class="ui horizontal list selection huge">
		<div class="item" ng-repeat="tool in tools" ng-click="user_info(tool.User.user_id)" ng-hide="delete">
			<img class="ui avatar image" src="{{tool.User.photo_url}}">
			<div class="content">
				<div class="header" ng-bind="tool.User.user_name"></div>
				<div ng-bind="tool.User.account"></div>
			</div>
		</div>
		<div class="item" ng-repeat="tool in tools" ng-click="fire_tool(tool.toolship_id)" ng-show="delete">
			<i class="ban icon"></i>
			<div class="content">
				<div class="header" ng-bind="tool.User.user_name"></div>
				<div ng-bind="tool.User.account"></div>
			</div>
		</div>
		<div class="item" ng-show="identity()" ng-click="add_tool()">
			<i ng-show="status()" class="plus square outline icon"></i>
			<div  ng-show="status()" class="content">
				<div class="header"><%= __('Tool more') %></div>
			</div>
		</div>
		<div class="item" ng-hide="identity()" ng-click="tool_me()">
			<i ng-show="status()" class="plus square outline icon"></i>
			<div ng-show="status()" class="content">
				<div class="header"><%= __('Tool me') %></div>
			</div>
		</div>
	</div>
	<div class="ui divider"></div>
	
	<!-- <div class="ui one column grid"> -->
	<!-- <div class="row"> -->
	<h2 class="ui header ">
	<img src="/assets/images/tool.png" class="ui circular image">
	<%= __('Chatroom') %>
	</h2>
	<!-- </div> -->
	<!-- <div class="row"> -->
		
	<div class="ui segment" scroll-glue="glued">
	
		<div class="ui comments">
			<div class="comment" ng-repeat="chat in chats | orderBy:'time'">
				<!-- <a class="avatar">
							<img class="ui mini image" src="assets/images/tool.png">
				</a> -->
				<div class="content">
					<a class="author">{{chat.User.user_name}}</a>
					<div class="metadata">
						<span class="date">{{chat.time}}</span>
					</div>
					<div class="text">
						{{chat.content}}
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- </div> -->
	<div class="row">
		<div class="ui form">
			<div class="field">
				<input type="text" ng-model="liveMessage" placeholder="Say Something">
			</div>
			<div class="ui blue labeled submit icon button" ng-click="sendMessage()">
				<i class="icon edit"></i> <%= __('Say') %>
			</div>
		</div>
	</div>
</div>
