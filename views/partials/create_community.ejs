<br>
<div class="ui text container">
    <div class="ui attached icon info message">
        <i class="help circle icon"></i>
        <div class="content">
            <h1><%= __('Form your group') %></h1>
        </div>
    </div>
    <div class="ui segment">
        <form class="ui form">
            <h4 class="ui dividing header"><%= __('Group Information') %></h4>
                <div class="field">
                    <label><%= __('Name') %></label>
                    <input type="text"  placeholder="Your group's name" ng-model="name">
                </div>
            <div class="field">
                <label><%= __(''Group photo) %></label>
                <div class="ui input">
                <input  type="file" ng-model="uploadImage" ngf-select="test()" ngf-max-height="1000" ngf-max-size="1MB">
                <button class="ui button" ng-click="uploadImageFile(uploadImage)"><%= __('Upload') %></button>
                </div>
                
                <img class="ui centered image" ngf-src="uploadImage">
            </div>
            <h4 class="ui dividing header"><%= __('Member Information') %></h4>
            <div class="field">
                <label><%= __('Members') %></label>
                <select class="ui fluid search dropdown" id="members" multiple="" ng-model="members" ng-options="user.user_name for user in users" ng-change="selectSkill()">
                </select>
            </div>

            <div class="ui button" ng-click="create_group()" tabindex="0"><%= __('Form Group') %></div>
        </form>
    </div>
</div>