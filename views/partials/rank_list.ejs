<div class="ui middle aligned four column centered  container">
	<div class="ui middle aligned centered four column grid">
		<div class="row">
			<h2 class="ui header">
			<img src="/assets/images/tool.png" class="ui circular image">
			Missions Completed
			</h2>
		</div>
		<div class="ui divider"></div>
		<div class="row">
			<div class="column" ng-repeat="user in missionClearedList" ng-if="$index < 3">
				<img class="ui small circular image" src="{{user.photo_url}}">
				<div class="ui statistic">
					<div class="value" ng-bind="user.count"></div>
					<div class="label">
						Missions completed
					</div>
				</div>
			</div>
		</div>
		<br>

		<div class="row">
			<h2 class="ui header">
			<img src="/assets/images/tool.png" class="ui circular image">
				Tool Quality
			</h2>
		</div>
		<div class="ui divider"></div>

		<div class="ui top attached tabular menu">
		  <a class="item active" data-tab="Tool">Tool</a>
		  <a class="item" data-tab="Bike">Bike</a>
		  <a class="item" data-tab="Homework">Homework</a>
		</div>
		<!-- Tool Tag Rank -->
		<div class="ui bottom attached active tab segment" data-tab="Tool">
			<div class="ui middle aligned centered four column grid">
				<div class="row">
					<div class="column" ng-repeat="user in totalQuality" ng-if="$index < 3">
						<img class="ui small circular image" src="{{user.photo_url}}">
						<div class="ui statistic">
							<div class="value" ng-bind="user.ranking"></div>
							<div class="label">
								Avg Ranking
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="ui bottom attached tab segment" data-tab="Bike">
			<div class="ui middle aligned centered four column grid">
				<div class="row">
					<div class="column" ng-repeat="user in totalQuality" ng-if="$index < 3">
						<img class="ui small circular image" src="{{user.photo_url}}">
						<div class="ui statistic">
							<div class="value" ng-bind="user.ranking"></div>
							<div class="label">
								Avg Ranking1
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="ui bottom attached tab segment" data-tab="Homework">
			<div class="ui middle aligned centered four column grid">
				<div class="row">
					<div class="column" ng-repeat="user in totalQuality" ng-if="$index < 3">
						<img class="ui small circular image" src="{{user.photo_url}}">
						<div class="ui statistic">
							<div class="value" ng-bind="user.ranking"></div>
							<div class="label">
								Avg Ranking2
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


	</div>
</div>

<div class="ui small modal">
	<table class="ui padded celled center aligned sortable table">
	<thead>
		<th></th>
		<th>User ID</th>
		<th class="sorted descending">Avg Ranking</th>
		<th>Missions</th>
		<th></th>
	</thead>
	<tbody>
		<tr ng-repeat="tool in modalList">
			<td>
				<img ng-src="{{tool.imgUrl}}" class="ui circular tiny image middle aligned">
			</td>
			<td>{{tool.account}}</td>
			<td>
				<div class="ui star rating" data-rating="{{tool.star}}" data-max-rating="5"></div>
				<div class="ui tiny statistic">
					<div class="value">{{tool.rank}}</div>
				</div>
			</td>
			<td>{{tool.completedMission}}</td>
			<td>
				<div class="ui floated primary button">View Profile</div>
			</td>
		</tr>
	</tbody>
	
